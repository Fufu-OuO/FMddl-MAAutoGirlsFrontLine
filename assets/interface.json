{
    "name": "FMddl-MAA",
    "version":  "0.1.0",
    "mirrorchyan_rid":  "FMddl-MAAutoGirlsFrontLine",
    "mirrorchyan_multiplatform":  false, 
    "url":  "https://github.com/Fufu-OuO/FMddl-MAAutoGirlsFrontLine",
    "custom_title": "费马",
    "controller": [
        {
            "name": "Steam",
            "type": "Win32",
            "win32": {
                "class_regex": ".*",
                "window_regex": "少女前线"
            }
        }
    ],
    "resource": [
        {
            "name": "Steam 官服",
            "path": [
                "{PROJECT_DIR}/resource/SteamGF"
            ]
        }
    ],
    "agent": {
        "child_exec": "python",
        "child_args": [
            "{PROJECT_DIR}/agent/main.py"
        ]
    },
    "task": [
        {
            "name": "登录游戏",
            "entry": "EnterGame",
            "option": [
                "服务器"
            ]
        },
        {
            "name": "宿舍（好感、点赞、电池）",
            "entry": "RoomDorm"
        },
        {
            "name": "资料室（人形经验书）",
            "entry": "RoomData"
        },
        {
            "name": "前进营地（已出发则不操作）",
            "entry": "RoomExplore"
        },
        {
            "name": "领取奖励",
            "entry": "Rewardget"
        }
    ],
    "option": {
        "服务器": {
            "cases": [
                {
                    "name": "[官服] M4A1",
                    "pipeline_override": {
                        "ServerSelection": {
                            "recognition": {
                                "type": "TemplateMatch",
                                "param": {
                                    "roi" : [
                                        0,
                                        0,
                                        389,
                                        579
                                    ],
                                    "template": [
                                        "EnterGame/ServerM4A1.png"
                                    ]
                                }
                            },
                            "action": {
                                "type": "Click"
                            }
                        }
                    }
                },
                {
